---
import type { CollectionEntry } from "astro:content";

type Props = { posts: CollectionEntry<"post">[] };

const { posts } = Astro.props;
---

<div class="flex flex-col gap-5">
  {
    posts.map(post => (
    <a href={`/posts/${post.slug}`}>
      <div class="card w-full bg-base-200">
        {
          post.data.banner && (
            <figure>
              <img class="w-full max-h-60 object-cover" src={post.data.banner} alt={post.data.title} />
            </figure>
          )
        }
        <div class="card-body">
          <h2 class="card-title">{post.data.title}</h2>
          <!-- TODO: excerpt -->
          <p>Empty</p>
        </div>
      </div>
    </a>
    ))
  }
</div>

